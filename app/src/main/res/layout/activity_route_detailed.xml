       <TextView
           android:id="@+id/route"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"




           android:text="ELAPSED TIME"
           android:textColor="#006"
           android:textSize="18sp"
           android:textStyle="bold" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvTime"
           android:text="___"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="#006"
           />



   </LinearLayout>
