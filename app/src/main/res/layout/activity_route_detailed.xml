<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.Route_Detailed"
    android:background="@drawable/a">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar">

    </include>



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:text="Thank You for using us as your service providers"

        android:id="@+id/textView2"
        android:layout_below="@+id/app_bar"
        android:padding="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#89BCEB"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="ELAPSED TIME"
        android:textColor="#808080"
        android:id="@+id/route"
        android:textStyle="bold"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:id="@+id/linearLayoutElapsedTime"
        android:layout_below="@+id/route">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"
        android:text="25"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#808080"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" min"
android:textStyle="bold"
            android:textColor="#808080"
            android:textSize="25sp"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/linearLayoutElapsedTime"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_linearlayout_route_detailed_screen"
    android:orientation="vertical"
    android:padding="25dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="10dp"

    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2">
    <TextView
        android:gravity="center"
        android:textColor="#89BCEB"
        android:textStyle="bold"
        android:textSize="23sp"
        android:paddingBottom="10dp"
        android:id="@+id/tvRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking Discount"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">


            <TextView
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
            android:layout_weight="0.5"

            android:text="Balance"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#808080"
                android:gravity="center"
                android:textStyle="bold"
            android:text="Tarrif"
            android:layout_weight="0.5"

                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:layout_weight="0.5"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tvBalanceAmount"
            android:text="$:123"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$:456"
            android:id="@+id/tvTariffAmount"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#808080"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#89BCEB"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#808080"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="Charge"


        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="$ 25"
        android:textSize="18sp"
        android:id="@+id/tvPrice"

        android:layout_marginTop="5dp"


        android:textColor="#808080"
        android:layout_gravity="center"


        />

</LinearLayout>




    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="PAY"
        android:background="@drawable/bg_btn_route_detailed"
        android:textSize="20sp"
        android:textColor="@drawable/colors_for_btn_route_detailed"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/pay"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearLayout2"
        />
</RelativeLayout>
