<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="18sp"
                android:gravity="right"
                android:textColor="#006"
                android:text="No. of Persons:    " />
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:id="@+id/etNumberOfPersons"
                android:layout_weight="0.25"
                android:inputType="number"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textColor="#006"
                android:digits="0123456789"/>
        <!--</LinearLayout>-->
    <!--</LinearLayout>-->
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/linearLayoutElapsedTime"
    android:layout_marginTop="2dp"
    android:background="@drawable/bg_linearlayout_route_detailed_screen"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="10dp"

    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2">
    <TextView
        android:gravity="center"
        android:textColor="#000066"
        android:textStyle="bold"
        android:textSize="23sp"
        android:paddingBottom="5dp"
        android:id="@+id/tvRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking Discount"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="1">


            <TextView
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
            android:layout_weight="0.5"

            android:text="Balance"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#006"
                android:gravity="center"
                android:textStyle="bold"
            android:text="Charge"
            android:layout_weight="0.5"

                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#006"
            android:layout_weight="0.5"
            android:textSize="18sp"
            android:gravity="center"
            android:id="@+id/tvBalanceAmount"
            android:text="$123"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0"

            android:id="@+id/tvPrice"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000066"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#006"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000066"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:text="Tarrif"


        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="___"

        android:textSize="18sp"
        android:id="@+id/tvTariffAmount"

        android:layout_marginTop="5dp"


        android:textColor="#006"
        android:layout_gravity="center"


        />

</LinearLayout>




    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="PAY"
        android:background="@drawable/bg_btn_route_detailed"
        android:textSize="20sp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/pay"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearLayout2"
        />
</LinearLayout>
